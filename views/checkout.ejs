<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <style>
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(120deg, #00AEEF, #4F4F4F, #FFFFFF);
            background-size: 200% 200%;
            animation: gradientShift 8s ease infinite;
            color: #333;
        }

        .checkout-container {
            max-width: 600px;
            background-color: #FFFFFF;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .checkout-container h2 {
            margin-bottom: 20px;
            color: #00AEEF;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #4F4F4F;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            transition: all 0.3s;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #00AEEF;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 174, 239, 0.4);
        }

        .form-group button {
            width: 100%;
            padding: 12px;
            background: #00AEEF;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .form-group button:hover {
            background-color: #0079A1;
        }

        #selected-plan {
            margin-bottom: 20px;
            font-weight: bold;
            color: #4F4F4F;
        }
        
    </style>
</head>
<body>
    <div class="checkout-container">
        <h2>Checkout</h2>
        <p id="selected-plan">Selected Plan: </p>
        <form action="/payment" method="POST">
            <!-- Customer Information -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required>
            </div>

            <!-- Address Information -->
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <select id="country" name="country" required>
                    <option value="">Select Country</option>
                    <option value="US">United States</option>
                    <option value="IN">India</option>
                    <option value="UK">United Kingdom</option>
                    <!-- Additional countries as needed -->
                </select>
            </div>
            <div class="form-group">
                <label for="state">State/Province</label>
                <input type="text" id="state" name="state" required>
            </div>
            <div class="form-group">
                <label for="postal-code">Postal Code</label>
                <input type="text" id="postal-code" name="postal_code" required>
            </div>

            <!-- Payment Information -->
            <h3>Payment Details</h3>
            <div class="form-group">
                <label for="card-number">Card Number</label>
                <input type="text" id="card-number" name="card_number" required maxlength="16" pattern="\d{16}">
            </div>
            <div class="form-group">
                <label for="expiry-date">Expiry Date (MM/YY)</label>
                <input type="text" id="expiry-date" name="expiry_date" required pattern="\d{2}/\d{2}">
            </div>
            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" required maxlength="3" pattern="\d{3}">
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit">Proceed to Payment</button>
            </div>
        </form>
    </div>

    <script>
        // Parse URL parameters to show the selected plan and price
        const urlParams = new URLSearchParams(window.location.search);
        const planName = urlParams.get('plan');
        const planPrice = urlParams.get('price');
        document.getElementById('selected-plan').textContent = `Selected Plan: ${planName} - ${planPrice}`;
    </script>
</body>
</html>


